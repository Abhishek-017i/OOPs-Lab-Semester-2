public class Pyramid {
    public static void main(){
        for(int i = 0; i<=7; i++) {
            for (int j = 7 - i; j > 0; j--) {
                System.out.print("      ");
            }

            for (int j = 0; j <= i; j++) {
                System.out.print("   "+Math.pow(2, j));
            }

            for(int j = i-1 ; j >= 0; j--){
                System.out.print("  "+ Math.pow(2,j));
            }
            System.out.println("");
        }

    }
}
